<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".Activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_left"
                android:onClick="onClickBack" />

            <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/label_profile"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                customAttrs:customFont="intro_regular"/>

           <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toStartOf="@+id/edit"
               android:layout_centerVertical="true"
               android:layout_marginEnd="15dp"
               android:background="@android:color/transparent"
               android:onClick="onClickExitButton"
               android:text="@string/button_exit"
               android:textColor="@color/colorAccent"
               android:textSize="15sp"
               customAttrs:customFont="intro_regular" />

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_edit"
                android:onClick="onClickEditButton"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.constraint.ConstraintLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="135dp"
                            android:layout_height="135dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/person"
                            customAttrs:layout_constraintBottom_toBottomOf="parent"
                            customAttrs:layout_constraintEnd_toEndOf="parent"
                            customAttrs:layout_constraintHorizontal_bias="0.0"
                            customAttrs:layout_constraintStart_toStartOf="parent"
                            customAttrs:layout_constraintTop_toTopOf="parent"
                            customAttrs:layout_constraintVertical_bias="1.0" />

                    </android.support.constraint.ConstraintLayout>


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Фамилия:"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            customAttrs:customFont="intro_regular"/>

                        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                            android:id="@+id/surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            customAttrs:customFont="intro_regular"/>

                        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Имя:"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            customAttrs:customFont="intro_regular"/>

                        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            customAttrs:customFont="intro_regular"/>

                        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Отчество:"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            customAttrs:customFont="intro_regular"/>

                        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                            android:id="@+id/middlename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            customAttrs:customFont="intro_regular"/>

                    </LinearLayout>

                </LinearLayout>

                <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Должность:"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    customAttrs:customFont="intro_regular"/>

                <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    customAttrs:customFont="intro_regular"/>

                <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Количество знакомых:"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    customAttrs:customFont="intro_regular"/>

                <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                    android:id="@+id/users_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    customAttrs:customFont="intro_regular"/>

                <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                    android:id="@+id/label_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Описание:"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    customAttrs:customFont="intro_regular"/>

                <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    customAttrs:customFont="intro_regular"/>


            </LinearLayout>



        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>