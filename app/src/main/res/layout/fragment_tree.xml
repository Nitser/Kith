<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/f_tree"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    tools:context="com.project.scratchstudio.kith_andoid.fragments.TreeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_left"
                android:visibility="invisible" />

            <com.project.scratchstudio.kith_andoid.custom_views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/label_main"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                customAttrs:customFont="intro_regular"/>

            <ImageButton
                android:id="@+id/search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/plus"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"/>

            <ImageButton
                android:id="@+id/plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_add_white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_field">

                <ImageButton
                    android:id="@+id/back_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_left"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/filter"
                    android:background="@null"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/back_search"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search"
                    android:textColor="@color/colorAccent"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/paper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="135dp"
                            android:layout_height="135dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/person"
                            customAttrs:layout_constraintBottom_toBottomOf="@+id/buttonProfile"
                            customAttrs:layout_constraintEnd_toEndOf="parent"
                            customAttrs:layout_constraintHorizontal_bias="0.0"
                            customAttrs:layout_constraintStart_toStartOf="parent"
                            customAttrs:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/buttonProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/button_plus"
                            android:src="@drawable/ic_more"
                            android:tint="@color/colorAccent"
                            customAttrs:layout_constraintBottom_toBottomOf="@+id/photo"
                            customAttrs:layout_constraintEnd_toEndOf="parent"
                            customAttrs:layout_constraintHorizontal_bias="0.915"
                            customAttrs:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.project.scratchstudio.kith_andoid.custom_views.CustomFontTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        customAttrs:customFont="intro_regular"
                        android:layout_marginTop="10dp"/>

                    <com.project.scratchstudio.kith_andoid.custom_views.CustomFontTextView
                        android:id="@+id/position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        customAttrs:customFont="intro_regular"
                        android:layout_marginTop="10dp"/>

                    <com.project.scratchstudio.kith_andoid.custom_views.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вы и ваши знакомые пригласили:"
                        android:textSize="17sp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        customAttrs:customFont="intro_regular"
                        android:layout_marginTop="30dp"/>

                    <com.project.scratchstudio.kith_andoid.custom_views.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yourPeople"
                        android:text = "-"
                        android:textSize="34sp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        customAttrs:customFont="intro_regular"
                        android:layout_marginBottom="50dp"/>

                    <LinearLayout
                        android:id="@+id/list_view"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/paper_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@color/colorPrimary">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>





</LinearLayout>