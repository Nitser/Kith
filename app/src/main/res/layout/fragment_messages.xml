<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/f_tree"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    tools:context="com.project.scratchstudio.kith_andoid.fragments.TreeFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="10dp">

      <com.project.scratchstudio.kith_andoid.custom_views.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_messages"
          android:padding="5dp"
          android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        customAttrs:customFont="intro_regular"/>

      <ImageButton
        android:id="@+id/plus"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@null"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_white"/>

    </RelativeLayout>

    <LinearLayout
      android:orientation="vertical"
      android:id="@+id/paper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="34dp"
          android:layout_marginEnd="20dp"
          android:layout_marginStart="20dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/search_field">

        <ImageButton
          android:layout_marginStart="10dp"
          android:id="@+id/search"
          android:layout_width="28dp"
          android:layout_height="28dp"
          android:layout_marginEnd="10dp"
          android:layout_marginTop="5dp"
          android:background="@drawable/ic_search"/>

        <EditText
          android:id="@+id/filter"
          android:background="@null"
          android:lines="1"
          android:textSize="16sp"
          android:layout_toEndOf="@id/search"
          android:layout_centerVertical="true"
          android:layout_marginEnd="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/colorAccent"/>

      </RelativeLayout>

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>