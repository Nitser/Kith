<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.SmsActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
            android:id="@+id/back"
            android:layout_width="63dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:onClick="onClickBackButton"
            android:text="Отмена"
            android:textSize="17sp"
            android:textColor="@color/colorAccent"
            customAttrs:customFont="intro_regular" />

        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Аутентификация"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            customAttrs:customFont="intro_regular" />
    </RelativeLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">


        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
            android:id="@+id/customFontTextView8"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Код подтверждения отправлен на ваш номер телефона"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            app:layout_constraintTop_toTopOf="parent"
            customAttrs:customFont="intro_regular"
            tools:layout_editor_absoluteX="0dp" />

        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontEditText
            android:id="@+id/editText7"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/entry_field_check_in"
            android:hint="Введите полученный код"
            android:inputType="number"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorHint"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customFontTextView8"
            customAttrs:customFont="intro_regular" />

        <Button
            android:id="@+id/button2"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_basic"
            android:onClick="checkButton"
            android:padding="10dp"
            android:text="ПОДТВЕРДИТЬ"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText7" />

        <com.project.scratchstudio.kith_andoid.CustomViews.CustomFontTextView
            android:id="@+id/customFontTextView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:onClick="againButton"
            android:text="Отправить повторно"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            customAttrs:customFont="intro_regular" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>