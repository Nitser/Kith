<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:text="@string/button_cancel"
                    style="@style/CustomProfileText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_announcements"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    style="@style/CustomProfileText"/>

                <TextView
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    style="@style/CustomProfileText"
                    android:text="@string/button_done"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/new_photo"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:scaleType="center"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/newspaper"/>

            <Button
                android:id="@+id/loadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/load_photo"
                android:textAllCaps="false"
                android:background="@drawable/button_basic"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                style="@style/CustomProfileText"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    style="@style/CustomProfileTitleText"/>

            <EditText
                android:id="@+id/title_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/title"
                android:background="@drawable/entry_field_check_in"
                android:inputType="text"
                android:lines="1"
                android:maxLength="35"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorHint"
                android:textSize="14sp"
                style="@style/CustomProfileText"/>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/cost"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp"
                        style="@style/CustomProfileTitleText"/>

                    <com.project.scratchstudio.kith_andoid.ui.neweditboard.CustomEditText
                        android:id="@+id/cost_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/cost"
                        android:background="@drawable/entry_field_check_in"
                        android:inputType="number|numberDecimal"
                        android:lines="1"
                        android:maxLength="35"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorHint"
                        android:textSize="14sp"
                        style="@style/CustomProfileText"
                        />

                </RelativeLayout>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:text="@string/description"
                style="@style/CustomProfileTitleText"/>

            <EditText
                android:id="@+id/change_description"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/entry_field_check_in"
                android:maxLines="5"
                android:minLines="1"
                android:inputType="textMultiLine"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorHint"
                android:textSize="14sp"
                style="@style/CustomProfileText" />

            </LinearLayout>

            </ScrollView>

        </LinearLayout>

</LinearLayout>
</layout>
