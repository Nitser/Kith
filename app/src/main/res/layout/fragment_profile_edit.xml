<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_gravity="center"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_edit_user_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/person"
                            android:paddingBottom="15dp"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:civ_circle_background_color="@color/colorAccent" />

                        <ImageButton
                            android:id="@+id/profile_edit_button_add_photo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_add"
                            android:background="@drawable/button_plus"
                            android:tint="@color/colorAccent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:text="@string/lastName"/>

                        <EditText
                            android:id="@+id/profile_edit_field_firstname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="@string/lastName"
                            android:inputType="textFilter|textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:text="@string/Name"/>

                        <EditText
                            android:id="@+id/profile_edit_field_lastname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="@string/Name"
                            android:inputType="textFilter|textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:text="Отчество"/>

                        <EditText
                            android:id="@+id/profile_edit_field_middlename"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="Отчество"
                            android:inputType="textFilter|textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:text="@string/position"/>

                        <EditText
                            android:id="@+id/profile_edit_field_position"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="@string/position"
                            android:inputType="textFilter|textNoSuggestions|textVisiblePassword"
                            android:lines="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:text="@string/email"/>

                        <EditText
                            android:id="@+id/profile_edit_field_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:text="@string/phone"/>

                        <EditText
                            android:id="@+id/profile_edit_field_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="@string/phone"
                            android:inputType="phone"
                            android:lines="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            android:padding="3dp"
                            style="@style/CustomProfileTitleText"
                            android:text="@string/password"/>

                        <TextView
                            android:id="@+id/profile_edit_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileText"/>

                        <TextView
                            android:id="@+id/profile_edit_button_change_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:layout_marginStart="3dp"
                            android:padding="3dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            style="@style/CustomProfileText"
                            android:textColor="@color/colorAccent"
                            android:text="@string/edit"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            style="@style/CustomProfileTitleText"
                            android:gravity="center"
                            android:text="@string/description"/>

                        <EditText
                            android:id="@+id/profile_edit_field_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/entry_field_check_in"
                            android:hint="@string/description"
                            android:inputType="text"
                            android:lines="7"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorHint"
                            android:textSize="14sp"
                            style="@style/CustomProfileText"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/profile_edit_button_save"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_check_in"
                    android:text="Обновить профиль"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>