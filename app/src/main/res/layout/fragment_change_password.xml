<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/old_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Старый пароль:" />

        <EditText
            android:id="@+id/change_password_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/change_password_repeat_password"
            android:layout_alignEnd="@+id/change_password_repeat_password"
            android:layout_toEndOf="@+id/old_p"
            android:background="@drawable/entry_field_check_in"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorHint"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/new_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_password_old_password"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:text="Новый пароль:" />

        <EditText
            android:id="@+id/change_password_new_password"
            android:layout_below="@+id/change_password_old_password"
            android:layout_toEndOf="@+id/new_p"
            android:layout_alignStart="@+id/change_password_repeat_password"
            android:layout_alignEnd="@+id/change_password_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/entry_field_check_in"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rep_p"
            android:layout_below="@id/change_password_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:text="Подтвердите пароль:" />

        <EditText
            android:id="@+id/change_password_repeat_password"
            android:layout_below="@id/change_password_new_password"
            android:layout_toEndOf="@id/rep_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/entry_field_check_in"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorHint"
            android:textSize="14sp" />

        <Button
            android:id="@+id/change_password_change"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_check_in"
            android:onClick="onClickChangePassword"
            android:text="Изменить пароль"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</layout>