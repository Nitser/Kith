<resources>

    <style name="KithAppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/KithDarkActionBarTheme</item>
        <item name="android:actionBarStyle">@style/KithDarkActionBarTheme</item>
    </style>

    <style name="KithDarkActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/KithActionBarTitle</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="KithActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/intro_regular</item>
    </style>


    <style name="CustomTitleText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomReferralCodeText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomForgetPasswordText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomProfileTitleText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/intro_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomProfileText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonDark" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
        <item name="android:translationZ">3dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonLight" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_light</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
        <item name="android:translationZ">3dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonEmpty" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_empty_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/intro_regular</item>
    </style>

    <style name="FieldDark" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/field_dark</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:translationZ">3dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="FieldLight" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/field_light</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
